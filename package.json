{
  "name": "@angstone/cement-basic",
  "version": "1.0.5",
  "description": "Environment constants, a logger and an error handler acting as TypeScript boilerplate",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/app.js",
    "clean": "node_modules/.bin/rimraf ./dist",
    "build": "npm run clean && ./node_modules/typescript/bin/tsc",
    "test": "node_modules/.bin/nodemon --config nodemon-test.json",
    "test:mocha": "node_modules/.bin/mocha",
    "test:coverage": "node_modules/.bin/nyc npm run test:mocha"
  },
  "keywords": [
    "typescript",
    "backend",
    "boilerplate",
    "mocha",
    "tsplint",
    "prettier",
    "logger",
    "error"
  ],
  "author": "ssribeiro",
  "license": "MIT",
  "dependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.12",
    "@types/chai-things": "0.0.34",
    "@types/chalk": "^2.2.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.26",
    "@types/sinon": "^9.0.4",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "clear-module": "^4.1.1",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  }
}
